{
  "info": {
    "name": "OnPoint Tenancy & User Management",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Collection for testing OnPoint tenancy and user management APIs. Uses fleetTenancyBaseUrl, fleetTenancyApiKey, and idToken from the environment."
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "exec": [
          "const apiKey = pm.environment.get('fleetTenancyApiKey');",
          "const role = pm.environment.get('roleAdmin');",
          "const token = pm.environment.get('idToken');",
          "if (apiKey && !pm.request.headers.has('x-api-key')) {",
          "  pm.request.headers.add({ key: 'x-api-key', value: apiKey });",
          "}",
          "if (role && !pm.request.headers.has('x-role')) {",
          "  pm.request.headers.add({ key: 'x-role', value: role });",
          "}",
          "if (token && !pm.request.headers.has('Authorization')) {",
          "  pm.request.headers.add({ key: 'Authorization', value: `Bearer ${token}` });",
          "}"
        ]
      }
    }
  ],
  "item": [
    {
      "name": "List Tenants",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{idToken}}",
            "type": "text"
          },
          {
            "key": "x-api-key",
            "value": "{{fleetTenancyApiKey}}",
            "type": "text"
          },
          { "key": "x-role", "value": "{{roleAdmin}}", "type": "text" }
        ],
        "url": {
          "raw": "{{fleetTenancyBaseUrl}}/tenants",
          "host": ["{{fleetTenancyBaseUrl}}"],
          "path": ["tenants"]
        }
      }
    },
    {
      "name": "Create Tenant",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{idToken}}",
            "type": "text"
          },
          {
            "key": "x-api-key",
            "value": "{{fleetTenancyApiKey}}",
            "type": "text"
          },
          { "key": "x-role", "value": "{{roleAdmin}}", "type": "text" },
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Test Tenant\",\n  \"contact\": \"admin@example.com\"\n}"
        },
        "url": {
          "raw": "{{fleetTenancyBaseUrl}}/tenants",
          "host": ["{{fleetTenancyBaseUrl}}"],
          "path": ["tenants"]
        }
      }
    },
    {
      "name": "List Users (by Tenant)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{idToken}}",
            "type": "text"
          },
          {
            "key": "x-api-key",
            "value": "{{fleetTenancyApiKey}}",
            "type": "text"
          },
          { "key": "x-role", "value": "{{roleAdmin}}", "type": "text" },
          { "key": "x-tenant-id", "value": "{{tenantId}}", "type": "text" }
        ],
        "url": {
          "raw": "{{fleetTenancyBaseUrl}}/tenants/{{tenantId}}/users",
          "host": ["{{fleetTenancyBaseUrl}}"],
          "path": ["tenants", "{{tenantId}}", "users"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('status is 200', () => pm.response.code === 200);",
              "const data = pm.response.json();",
              "const items = Array.isArray(data?.items) ? data.items : [];",
              "pm.test('items is an array', () => Array.isArray(items));",
              "if (items.length > 0) {",
              "  pm.test('enabled is boolean when present', () => {",
              "    const enabled = items[0].enabled;",
              "    if (enabled !== undefined) {",
              "      pm.expect(typeof enabled).to.eql('boolean');",
              "    }",
              "  });",
              "}"
            ]
          }
        }
      ],
      "response": [
        {
          "name": "Example - List Users",
          "originalRequest": {
            "method": "GET",
            "header": [
              { "key": "x-api-key", "value": "{{fleetTenancyApiKey}}" },
              { "key": "x-role", "value": "{{roleAdmin}}" },
              { "key": "x-tenant-id", "value": "{{tenantId}}" }
            ],
            "url": {
              "raw": "{{fleetTenancyBaseUrl}}/tenants/{{tenantId}}/users",
              "host": ["{{fleetTenancyBaseUrl}}"],
              "path": ["tenants", "{{tenantId}}", "users"]
            }
          },
          "status": "OK",
          "code": 200,
          "header": [{ "key": "Content-Type", "value": "application/json" }],
          "_postman_previewlanguage": "json",
          "body": "{\n  \"items\": [\n    {\n      \"PK\": \"TENANT#{{tenantId}}\",\n      \"SK\": \"USER#user1@example.com\",\n      \"tenantId\": \"{{tenantId}}\",\n      \"userId\": \"user1@example.com\",\n      \"email\": \"user1@example.com\",\n      \"groups\": [\"TenantAdmin\"],\n      \"createdAt\": \"2026-02-13T12:00:00Z\",\n      \"updatedAt\": \"2026-02-13T12:00:00Z\",\n      \"entityType\": \"USER\",\n      \"cognitoStatus\": \"CONFIRMED\",\n      \"enabled\": true\n    }\n  ]\n}"
        }
      ]
    },
