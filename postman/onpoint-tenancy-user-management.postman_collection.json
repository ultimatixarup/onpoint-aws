{
  "info": {
    "name": "OnPoint Tenancy & User Management",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Collection for testing OnPoint tenancy and user management APIs. Set the {{baseUrl}} and {{jwt}} variables."
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "exec": [
          "const apiKey = pm.environment.get('fleetTenancyApiKey');",
          "const role = pm.environment.get('roleAdmin');",
          "const token = pm.environment.get('idToken');",
          "if (apiKey && !pm.request.headers.has('x-api-key')) {",
          "  pm.request.headers.add({ key: 'x-api-key', value: apiKey });",
          "}",
          "if (role && !pm.request.headers.has('x-role')) {",
          "  pm.request.headers.add({ key: 'x-role', value: role });",
          "}",
          "if (token && !pm.request.headers.has('Authorization')) {",
          "  pm.request.headers.add({ key: 'Authorization', value: `Bearer ${token}` });",
          "}"
        ]
      }
    }
  ],
  "item": [
    {
      "name": "List Tenants",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{idToken}}", "type": "text" },
          { "key": "x-api-key", "value": "{{fleetTenancyApiKey}}", "type": "text" },
          { "key": "x-role", "value": "{{roleAdmin}}", "type": "text" }
        ],
        "url": { "raw": "{{fleetTenancyBaseUrl}}/tenants", "host": [ "{{fleetTenancyBaseUrl}}" ], "path": [ "tenants" ] }
      }
    },
    {
      "name": "Create Tenant",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{idToken}}", "type": "text" },
          { "key": "x-api-key", "value": "{{fleetTenancyApiKey}}", "type": "text" },
          { "key": "x-role", "value": "{{roleAdmin}}", "type": "text" },
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "body": { "mode": "raw", "raw": "{\n  \"name\": \"Test Tenant\",\n  \"contact\": \"admin@example.com\"\n}" },
        "url": { "raw": "{{fleetTenancyBaseUrl}}/tenants", "host": [ "{{fleetTenancyBaseUrl}}" ], "path": [ "tenants" ] }
      }
    },
    {
      "name": "List Users (by Tenant)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{idToken}}", "type": "text" },
          { "key": "x-api-key", "value": "{{fleetTenancyApiKey}}", "type": "text" },
          { "key": "x-role", "value": "{{roleAdmin}}", "type": "text" }
        ],
        "url": { "raw": "{{fleetTenancyBaseUrl}}/tenants/{{tenantId}}/users", "host": [ "{{fleetTenancyBaseUrl}}" ], "path": [ "tenants", "{{tenantId}}", "users" ] }
      }
    },
    {
      "name": "Create User (by Tenant)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{idToken}}", "type": "text" },
          { "key": "x-api-key", "value": "{{fleetTenancyApiKey}}", "type": "text" },
          { "key": "x-role", "value": "{{roleAdmin}}", "type": "text" },
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "body": { "mode": "raw", "raw": "{\n  \"username\": \"user1@example.com\",\n  \"email\": \"user1@example.com\",\n  \"roles\": [\"TenantAdmin\"]\n}" },
        "url": { "raw": "{{fleetTenancyBaseUrl}}/tenants/{{tenantId}}/users", "host": [ "{{fleetTenancyBaseUrl}}" ], "path": [ "tenants", "{{tenantId}}", "users" ] }
      }
    },
    {
      "name": "Assign Existing User (admin)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{idToken}}", "type": "text" },
          { "key": "x-api-key", "value": "{{fleetTenancyApiKey}}", "type": "text" },
          { "key": "x-role", "value": "{{roleAdmin}}", "type": "text" },
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "body": { "mode": "raw", "raw": "{\n  \"roles\": [\"TenantAdmin\"]\n}" },
        "url": { "raw": "{{fleetTenancyBaseUrl}}/platform/tenants/{{tenantId}}/users/{{userId}}/assign", "host": [ "{{fleetTenancyBaseUrl}}" ], "path": [ "platform", "tenants", "{{tenantId}}", "users", "{{userId}}", "assign" ] }
      }
    },
    {
      "name": "Disable User",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{idToken}}", "type": "text" },
          { "key": "x-api-key", "value": "{{fleetTenancyApiKey}}", "type": "text" },
          { "key": "x-role", "value": "{{roleAdmin}}", "type": "text" }
        ],
        "url": { "raw": "{{fleetTenancyBaseUrl}}/tenants/{{tenantId}}/users/{{userId}}/disable", "host": [ "{{fleetTenancyBaseUrl}}" ], "path": [ "tenants", "{{tenantId}}", "users", "{{userId}}", "disable" ] }
      }
    },
    {
      "name": "Enable User",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{idToken}}", "type": "text" },
          { "key": "x-api-key", "value": "{{fleetTenancyApiKey}}", "type": "text" },
          { "key": "x-role", "value": "{{roleAdmin}}", "type": "text" }
        ],
        "url": { "raw": "{{fleetTenancyBaseUrl}}/tenants/{{tenantId}}/users/{{userId}}/enable", "host": [ "{{fleetTenancyBaseUrl}}" ], "path": [ "tenants", "{{tenantId}}", "users", "{{userId}}", "enable" ] }
      }
    },
    {
      "name": "Set User Roles",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Authorization", "value": "Bearer {{idToken}}", "type": "text" },
          { "key": "x-api-key", "value": "{{fleetTenancyApiKey}}", "type": "text" },
          { "key": "x-role", "value": "{{roleAdmin}}", "type": "text" },
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "body": { "mode": "raw", "raw": "{\n  \"roles\": [\"TenantAdmin\", \"FleetManager\"]\n}" },
        "url": { "raw": "{{fleetTenancyBaseUrl}}/tenants/{{tenantId}}/users/{{userId}}/roles", "host": [ "{{fleetTenancyBaseUrl}}" ], "path": [ "tenants", "{{tenantId}}", "users", "{{userId}}", "roles" ] }
      }
    }
  ]
}
