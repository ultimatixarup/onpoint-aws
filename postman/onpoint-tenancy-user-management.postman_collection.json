              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{fleetTenancyBaseUrl}}/tenants/{{tenantId}}/users",
              "host": ["{{fleetTenancyBaseUrl}}"],
              "path": ["tenants", "{{tenantId}}", "users"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user1@example.com\",\n  \"roles\": [\"TenantAdmin\"]\n}"
            }
          },
          "status": "Created",
          "code": 201,
          "header": [{ "key": "Content-Type", "value": "application/json" }],
          "_postman_previewlanguage": "json",
          "body": "{\n  \"userId\": \"user1@example.com\",\n  \"email\": \"user1@example.com\",\n  \"tenantId\": \"{{tenantId}}\",\n  \"groups\": [\"TenantAdmin\"]\n}"
        }
      ]
    },
