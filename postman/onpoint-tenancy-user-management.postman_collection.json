            ],
            "url": {
              "raw": "{{fleetTenancyBaseUrl}}/platform/tenants/{{tenantId}}/users/{{userId}}/assign",
              "host": ["{{fleetTenancyBaseUrl}}"],
              "path": [
                "platform",
                "tenants",
                "{{tenantId}}",
                "users",
                "{{userId}}",
                "assign"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"roles\": [\"TenantAdmin\"]\n}"
            }
          },
          "status": "OK",
          "code": 200,
          "header": [{ "key": "Content-Type", "value": "application/json" }],
          "_postman_previewlanguage": "json",
          "body": "{\n  \"userId\": \"{{userId}}\",\n  \"tenantId\": \"{{tenantId}}\",\n  \"groups\": [\"TenantAdmin\"]\n}"
        }
